{
  "name": "foundry-hardhat-template",
  "version": "1.0.0-alpha.20",
  "description": "A template for create smart contracts using Foundry and Hardhat.",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "forge install",
    "prepare": "husky",
    "prebuild": "pnpm run lint",
    "build": "pnpm run --sequential '/^build:.*/'",
    "build:forge": "forge build --sizes",
    "build:hardhat": "hardhat compile",
    "lint": "pnpm run --sequential '/^lint:.*/'",
    "lint:hardhat": "hardhat check",
    "lint:slither": "command -v slither >/dev/null 2>&1 || pip install slither-analyzer; slither .",
    "pretest": "pnpm run build",
    "test": "pnpm run --sequential '/^test:.*/'",
    "test:forge": "forge test -vvvv",
    "test:hardhat": "hardhat test --typecheck"
  },
  "keywords": [],
  "author": "Milad Nekofar <milad@nekofar.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.6",
    "@nomicfoundation/hardhat-ethers": "3.0.5",
    "@nomicfoundation/hardhat-foundry": "1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "1.0.10",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomiclabs/hardhat-solhint": "3.0.1",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.11",
    "@types/mocha": "10.0.6",
    "@types/node": "20.14.9",
    "chai": "4.4.1",
    "ethers": "6.13.1",
    "hardhat": "2.22.5",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "5.0.1",
    "ts-node": "10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.5.2"
  },
  "resolutions": {
    "flat": ">=5.0.1",
    "minimatch": ">=3.0.5",
    "debug": ">=3.2.7",
    "word-wrap": ">=1.2.4",
    "tough-cookie": ">=4.1.3",
    "request": ">=2.88.2",
    "eth-gas-reporter": ">=0.2.26"
  },
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "pnpm": ">=9.0.0"
  }
}
